<%= form_with(model: diary, local: true) do |form| %>
  <% if diary.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(diary.errors.count, "error") %> 保存失敗:</h2>

      <ul>
        <% diary.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :題名 %>
    <%= form.text_field :title %>
  </div>

  <div class="field">
    <%= form.label :本文 %>
    <%= form.text_area :body %>
  </div>

  <div class="actions">
    <%= form.submit :投稿 %>
  </div>
<% end %>
